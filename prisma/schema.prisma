datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id            String    @id @default(uuid())
  email         String    @unique
  password      String
  displayName   String?
  emailVerified Boolean   @default(false)
  createdAt     DateTime  @default(now())
  characters    Character[]
  refreshTokens RefreshToken[]
}

model Character {
  id                 String       @id @default(uuid())
  name               String
  appearance         Json?
  class              String?
  level              Int          @default(1)
  createdAt          DateTime     @default(now())
  user               User         @relation(fields: [userId], references: [id])
  userId             String
  country            Country      @relation(fields: [countryId], references: [id])
  countryId          String
  currentGovernorateId String?
  currentCityId        String?
}

model RefreshToken {
  token     String   @id
  user      User     @relation(fields: [userId], references: [id])
  userId    String
  revoked   Boolean  @default(false)
  createdAt DateTime @default(now())
  expiresAt DateTime
}

// --- World Hierarchy ---

model Country {
  id           String        @id @default(cuid())
  name         String        @unique
  progress     Float         @default(0)
  safeZoneHost String?
  governorates Governorate[]
  characters   Character[]
}

model Governorate {
  id        String   @id @default(cuid())
  name      String
  progress  Float    @default(0)
  country   Country  @relation(fields: [countryId], references: [id])
  countryId String
  cities    City[]

  // This line enforces that the combination of name and countryId is unique
  @@unique([name, countryId])
}

model City {
  id            String      @id @default(cuid())
  name          String
  status        String      @default("infected")
  progress      Float       @default(0)
  governorate   Governorate @relation(fields: [governorateId], references: [id])
  governorateId String

  // This line enforces that the combination of name and governorateId is unique
  @@unique([name, governorateId])
}